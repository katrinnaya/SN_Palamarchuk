#!/bin/bash

# Запрашиваем у пользователя команды для выполнения
echo "Введите первую команду:"
read command1

echo "Введите вторую команду:"
read command2

echo "Введите третью команду:"
read command3

# Запуск первой команды
$command1 &

# Запуск второй команды
$command2 &

# Запуск третьей команды
$command3 &

# Ждем завершения всех запущенных задач
wait

# После завершения всех задач можно выполнять дальнейшие действия
echo "Все задачи завершены."

