#!/bin/bash

# Запрашиваем у пользователя имя или IP-адрес сервера
echo "Введите имя или IP-адрес сервера:"
read server_address

# Пингуем сервер и проверяем результат
ping_result=$(ping -c 1 "${server_address}")

# Проверяем, есть ли ошибки в результате ping
if [[ $ping_result == *"64 bytes from"* ]]; then
    # Если ошибок нет, значит сервер доступен
    echo "Сервер доступен."
else
    # Если есть ошибки, значит сервер недоступен
    echo "Сервер недоступен."
fi

