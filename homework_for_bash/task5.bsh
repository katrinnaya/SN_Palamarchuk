#!/bin/bash

# Запуск трех команд sleep в фоновом режиме
sleep 60 &
sleep 120 &
sleep 180 &

# Просмотр запущенных задач
echo "Запущенные фоновые процессы:"
jobs

# Переход одной из задач на передний план
echo "Переходим к задаче 2 на передний план..."
fg 2

# Возврат задачи на задний план
echo "Возвращаем задачу 2 на задний план..."
bg 2

# Завершение задачи 3
echo "Завершаем задачу 3..."
kill %3

# Повторный просмотр запущенных задач
echo "Оставшиеся фоновые процессы:"
jobs
